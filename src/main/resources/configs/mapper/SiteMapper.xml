<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sheepfly.media.dao.SiteMapper">

  <sql id="siteColumn_">
    ${tbname}.ID ${prefix}_id,
    ${tbname}
    .
    SITE_NAME
    ${
    prefix
    }
    _site_name,
    ${tbname}
    .
    URL
    ${
    prefix
    }
    _URL,
    ${tbname}
    .
    CREATE_TIME
    ${
    prefix
    }
    _CREATE_TIME,
    ${tbname}
    .
    UPDATE_TIME
    ${
    prefix
    }
    _UPDATE_TIME,
  </sql>

  <select id="querySiteList"
      parameterType="com.sheepfly.media.form.filter.SiteFilter"
      resultType="com.sheepfly.media.entity.Site">
    select ID,
    SITE_NAME,
    URL,
    CREATE_TIME,
    UPDATE_TIME
    from SITE
    <where>
      <if test="siteName != null and !siteName.equals('')">SITE_NAME = #{siteName}</if>
    </where>
    order by id desc
  </select>
  <select id="countSiteList"
      parameterType="com.sheepfly.media.form.filter.SiteFilter"
      resultType="int">
    select count(1)
    from SITE
    <where>
      <if test="siteName != null and !siteName.equals('')">SITE_NAME = #{siteName}</if>
    </where>
  </select>
</mapper>
